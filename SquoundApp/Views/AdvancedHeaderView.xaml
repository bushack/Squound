<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SquoundApp.Views"
             x:Class="SquoundApp.Views.AdvancedHeaderView">

    <!-- The AdvancedHeaderView is a ContentView that contains the header for the ProductSearchPage -->
    <VerticalStackLayout BackgroundColor="Transparent">

        <!-- Displays the current search category. eg. "Lighting" -->
        <views:SearchHeadingView Margin="0, 10, 0, 10"/>

        <!-- Horizontal scrollbar of product categories -->
        <views:SearchCategoriesView/>

        <!-- Displays the sort and filter buttons and their menus -->
        <views:SearchPreferencesView/>

        <!-- Whitespace spacer to push the content down -->
        <views:SpacerView/>

    </VerticalStackLayout>

</ContentView>
