<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SquoundApp.AppShell"

    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SquoundApp"
    xmlns:pages="clr-namespace:SquoundApp.Pages"
    
    Title="Squound"
    NavBarIsVisible="false">

    <TabBar>
        <Tab Title="Home"
             Icon="home.png">
            <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate pages:HomePage}"
                          Route="HomePage" />
        </Tab>
        <Tab Title="Search"
             Icon="search.png">
            <ShellContent Title="Search"
                          ContentTemplate="{DataTemplate pages:CoarseSearchPage}"
                          Route="CoarseSearchPage" />
        </Tab>
        <Tab Title="Account"
             Icon="account.png">
            <ShellContent Title="Account"
                          ContentTemplate="{DataTemplate pages:HomePage}"
                          Route="MainPage" />
        </Tab>
        <Tab Title="Basket"
             Icon="shopping.png">
            <ShellContent Title="Basket"
                          ContentTemplate="{DataTemplate pages:HomePage}"
                          Route="HomePage" />
        </Tab>
    </TabBar>
</Shell>
