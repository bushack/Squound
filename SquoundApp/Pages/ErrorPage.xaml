<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SquoundApp.ViewModels"
             x:Class="SquoundApp.Pages.ErrorPage"
             x:DataType="viewmodels:StartupViewModel"
             Title="ErrorPage"
             
             BackgroundColor="White">

    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center">

        <Image Source="squound_logo.png"
               HorizontalOptions="Center"
               Margin="20"
               WidthRequest="100"
               HeightRequest="100"/>

        <Label Text="{Binding ErrorMessage}"
               HorizontalOptions="Center"
               Margin="20"
               Style="{StaticResource MediumText}"/>

        <Button Text="Retry"
                Command="{Binding RetryCommand}"
                HeightRequest="50"
                WidthRequest="150"
                HorizontalOptions="Center"
                Margin="20"
                BackgroundColor="{StaticResource SquoundRorange}"
                TextColor="White"
                IsEnabled="{Binding CanRetry}"
                IsVisible="{Binding CanRetry}"/>

    </VerticalStackLayout>
    
</ContentPage>