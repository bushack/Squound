             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SquoundApp_v1.ViewsCustom.CategoriesView">
    
    <ScrollView HorizontalOptions="Fill"
                Style="{StaticResource HorizontalScrollView}">
        
        <HorizontalStackLayout VerticalOptions="Center">
            
            <Button Style="{StaticResource TextButton}" Text="Lounge" />
            <Button Style="{StaticResource TextButton}" Text="Dining" />
            <Button Style="{StaticResource TextButton}" Text="Office" />
            <Button Style="{StaticResource TextButton}" Text="Bedroom" />
            <Button Style="{StaticResource TextButton}" Text="Lighting" />
            <Button Style="{StaticResource TextButton}" Text="Decor" />
            <Button Style="{StaticResource TextButton}" Text="Accessories" />
            
        </HorizontalStackLayout>
        
    </ScrollView>

</ContentView>
