<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewsCustom="clr-namespace:SquoundApp_v1.ViewsCustom"
             x:Class="SquoundApp_v1.ViewsCustom.HeaderView">
    
        <!-- Squound Logo Header and Buttons -->
    <VerticalStackLayout Background="{StaticResource SquoundGradientBrush}">

        <ViewsCustom:SpacerView/>
        
        <Image Source="squound.png"
               Margin="15"
               HorizontalOptions="Center"
               WidthRequest="150"
               HeightRequest="150"/>

        <ViewsCustom:SpacerView/>

        <ViewsCustom:CategoriesView/>

        <ViewsCustom:SpacerView/>

    </VerticalStackLayout>

</ContentView>
