<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:SquoundApp_v1.Views"
             xmlns:viewmodels="clr-namespace:SquoundApp_v1.ViewModels"
             x:Class="SquoundApp_v1.Pages.ProductDetailPage"
             x:DataType="viewmodels:ProductDetailViewModel"
             Title="ProductDetailPage">

    <Grid RowDefinitions="Auto, *">
        <views:HeaderView Grid.Row="0"/>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout>

             <!-- Product Image -->
            <Border StrokeThickness="0"
                    BackgroundColor="Transparent"
                    StrokeShape="RoundRectangle 15"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Margin="20, 20, 20, 20">
                <Image Source="{Binding Product.Image}"
                       Aspect="AspectFit"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
            </Border>

            <!-- Grid for Name + Manufacturer (Left) and Price (Right) -->
            <Grid ColumnDefinitions="*, Auto"
                  RowDefinitions="Auto"
                  Padding="20,0,20,40">

                <!-- Stack Name + Manufacturer (Left Column) -->
                <VerticalStackLayout Grid.Column="0">
                    <Label Style="{StaticResource Headline}"
                           Text="{Binding Product.Name}"/>
                    <Label Style="{StaticResource SubHeadline}"
                           Text="{Binding Product.Manufacturer}"/>
                </VerticalStackLayout>

                <!-- Price Label (Right Column) -->
                <Label Style="{StaticResource PriceStyle}"
                       Text="{Binding Product.Price}"
                       Grid.Column="1"/>
            </Grid>

            <!-- Description Below -->
            <Label Style="{StaticResource BodyStyle}"
                   Text="{Binding Product.Description}"
                   Padding="20, 0, 20, 100"/>

            <!-- Footer -->
            <views:FooterView/>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
