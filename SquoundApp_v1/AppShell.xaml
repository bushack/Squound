<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SquoundApp_v1.AppShell"

    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SquoundApp_v1"
    xmlns:pages="clr-namespace:SquoundApp_v1.Pages"
    
    Title="Squound"
    NavBarIsVisible="false">

    <TabBar>
        <Tab Title="Home"
             Icon="home.png">
            <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate pages:AboutUsPage}"
                          Route="AboutUsPage" />
        </Tab>
        <Tab Title="Account"
             Icon="account.png">
            <ShellContent Title="Account"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage" />
        </Tab>
        <Tab Title="Basket"
             Icon="shopping.png">
            <ShellContent Title="Basket"
                          ContentTemplate="{DataTemplate pages:ProductSearchPage}"
                          Route="ProductSearchPage" />
        </Tab>
        <Tab Title="Settings"
             Icon="settings.png">
            <ShellContent Title="Settings"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage" />
        </Tab>
    </TabBar>
</Shell>
